#!/bin/ksh
#
# $OpenBSD: hysteria

chroot_dir=/var/vpns/hysteria
chroot_user=_vpn
daemon_class=daemon
daemon=/bin/hysteria
daemon_flags="server -c /etc/config.yaml"
daemon_user=root
daemon_logger=daemon.info

. /etc/rc.d/rc.subr

rc_start() {
	rc_exec "chroot -u $chroot_user $chroot_dir $daemon $daemon_flags"
}

rc_bg=YES
rc_reload=NO

rc_cmd $1
